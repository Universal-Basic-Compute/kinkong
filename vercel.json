{
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "buildCommand": "next build",
  "devCommand": "next dev",
  "framework": "nextjs",
  "crons": [
    {
      "path": "/api/cron/fetch-tokens",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/record-snapshot",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/analyze-sentiment",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/execute-trades",
      "schedule": "*/15 * * * *"
    }
  ]
}
